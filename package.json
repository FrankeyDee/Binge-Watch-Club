  "license": "ISC",
  "devDependencies": {
    "concurrently": "^4.1.0",
    "nodemon": "^1.18.7"
  },
  "dependencies": {
    "axios": "^0.18.1",
    "bcrypt": "^5.0.0",
    "connect-mongo": "^3.1.2",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.16.3",
    "express-session": "^1.17.0",
    "if-env": "^1.0.4",
    "mongoose": "^5.3.16",
    "node-fetch": "^2.6.0",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "pure-react-carousel": "^1.23.3",
    "react-items-carousel": "^2.8.0",
    "react-leaf-carousel": "^1.2.2",
    "react-router-dom": "^5.1.2"
  },
